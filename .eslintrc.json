{
  "root": true,

  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },

  // CHeck if work
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  
  "plugins": ["@typescript-eslint"],

  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb",
    "prettier",
    "eslint-config-prettier",
    "plugin:prettier/recommended",
    "plugin:react-hooks/recommended"
  ],

  "rules": {
    "no-console": 2,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}